<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartCard1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#add9e6"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cartItemQuantityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="300dp"
                android:layout_marginTop="70dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:text="1" />

            <TextView
                android:id="@+id/addText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="22sp"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginStart="320dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/white_circle_background"
                android:text="+" />

            <TextView
                android:id="@+id/minusText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginStart="260dp"
                android:layout_marginTop="70dp"
                android:clickable="true"
                android:background="@drawable/white_circle_background"
                android:text="-" />

            <TextView
                android:id="@+id/cartItemTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="25dp"
                android:textSize="25sp"
                android:textColor="@color/purple_Light"
                android:textStyle="bold"
                android:text="100$" />

            <TextView
                android:id="@+id/cartItemPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="80dp"
                android:textSize="18sp"
                android:textColor="@color/purple_Light"
                android:textStyle="bold"
                android:text="100$" />


            <TextView
                android:id="@+id/cartItemNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Nike Sneakers" />

            <View
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/white_background"/>

            <ImageView
                android:id="@+id/cartItemImageView"
                android:layout_width="95dp"
                android:layout_height="115dp"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:src="@drawable/show" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>